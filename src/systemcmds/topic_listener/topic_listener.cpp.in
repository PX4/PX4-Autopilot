class Topic
{
public:
	Topic(orb_id_t id) :
		_id(id),
		_sub(-1),
		_times_printed(0)
	{
		subscribe();
	}

	virtual ~Topic()
	{
		unsubscribe();
	}

	int get_fd()
	{
		return _sub;
	}

	unsigned times_printed()
	{
		return _times_printed;
	}

	bool exists() {
		return (orb_exists(_id, 0) == 0);
	}

	virtual bool update() = 0;

	void print()
	{
		print_specific();
		++_times_printed;
	}
	virtual void print_specific() = 0;

protected:
	void subscribe()
	{
		_sub = orb_subscribe(_id);
	}

	void unsubscribe()
	{
		orb_unsubscribe(_sub);
	}

	orb_id_t _id;
	int _sub;
private:
	unsigned _times_printed;
};


