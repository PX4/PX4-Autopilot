#define __INCLUDE_CXX_CTIME

//***************************************************************************
// Included Files
//***************************************************************************

#include <time.h>

//***************************************************************************
// Namespace
//***************************************************************************

namespace std
{
  using ::size_t;
  using ::time_t;
  using ::clockid_t;
  using ::timer_t;
  using ::timespec;
  using ::timeval;
  using ::tm;
  using ::itimerspec;
  using ::sigevent;
  using ::clock_settime;
  using ::clock_gettime;
  using ::mktime;
  using ::gmtime_r;
  using ::timer_create;
  using ::timer_delete;
  using ::timer_settime;
  using ::timer_gettime;
  using ::timer_getoverrun;
}

