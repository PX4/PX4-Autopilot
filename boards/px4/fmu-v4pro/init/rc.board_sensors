#!/bin/sh
#
# PX4 FMUv4pro specific board sensors init
#------------------------------------------------------------------------------

rgbled start -I

adc start

# Internal SPI bus ICM-20608-G
icm20608g -R 8 start

# Internal SPI bus ICM-20602
icm20602 -s -R 8 start

# Internal SPI bus mpu9250
mpu9250 -s -R 2 start

# Internal SPI bus
lis3mdl -s -R 0 start

# Possible external compasses
hmc5883 -T -X start
qmc5883 -X start

# RM3100
rm3100 start

# Internal SPI
ms5611 -s start
