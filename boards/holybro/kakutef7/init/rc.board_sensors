#!/bin/sh
#
# KakuteF7 specific board sensors init
#------------------------------------------------------------------------------

adc start

# The default IMU is an ICM20689, but there might also be an MPU6000
if ! mpu6000 -R 12 -s start
then
	mpu6000 -R 12 -z -T 20689 start
fi

# Internal Baro
bmp280 start

# Possible external compasses
ist8310 -X start
hmc5883 -C -T -X start
qmc5883 -X start
