          </mesh>
        </geometry>
      </visual>
    </link>
    <joint name='rear_right_wheel_joint' type='revolute'>
      <pose relative_to='base_link'>-0.231976 -0.208252 -0.099998 1.57 -0 0</pose>
      <parent>base_link</parent>
      <child>rear_right_wheel_link</child>
      <axis>
        <xyz>0 0 -1</xyz>
        <limit>
          <lower>-1e+16</lower>
